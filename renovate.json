{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>vexxhost/.github"
  ],
  "prBodyDefinitions": {
    "GitHub Links": "[Compare changes](https://github.com/{{{depName}}}/compare/{{{currentDigest}}}...{{{newDigest}}})"
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "Dockerfile"
      ],
      "matchStrings": [
        "ARG OVS_COMMIT=(?<currentDigest>.*)"
      ],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "openvswitch/ovs",
      "currentValueTemplate": "branch-3.3",
      "packageNameTemplate": "https://github.com/openvswitch/ovs"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "Dockerfile"
      ],
      "matchStrings": [
        "ARG DPDK_VERSION=(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "DPDK/dpdk",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "git-refs"
      ],
      "matchPackageNames": [
        "https://github.com/**"
      ],
      "prBodyColumns": [
        "Package",
        "Update",
        "Change",
        "GitHub Links"
      ]
    },
    {
      "enabled": false,
      "matchDepNames": [
        "DPDK/dpdk"
      ],
      "updateTypes": [
        "major",
        "minor"
      ]
    }
  ]
}